<?php

class PagoModel {
    public function procesarPago($monto, $metodo) {
        if ($monto > 0 && !empty($metodo)) {
            return "Pago de $monto realizado con éxito usando $metodo.";
        } else {
            return "Error en el pago. Verifica los datos ingresados.";
        }
    }
}
?>